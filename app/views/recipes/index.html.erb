<%- title t('nav.my_recipes') %>

<div class="grid grid--multiline">
  <div class="grid__item md-w-2/3">
    <h1>Mes recettes</h1>

    <% if @recipes.present? %>
      <ul class="list-stacked list-stacked--divided">
        <% @recipes.each do |recipe| %>
          <li><%= render 'recipes/group_item', :recipe => recipe %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="alert alert--info"><%= t('recipes.empty') %></p>
    <% end %>
  </div>
  <div class="grid__item md-w-1/3">
    <a href="<%= new_recipe_path %>" class="btn btn--primary btn--block mrgb">
      <%= render 'shared/icon', id: 'plus', classnames: 'icon--100' %>
      <%= t('recipes.new') %>
    </a>

    <% if @tags.present? %>
      <div class="panel">
        <div class="panel__header">
          <h3 class="panel__title"><%= t('activerecord.attributes.recipe.tags') %></h3>
        </div>
        <div class="panel__body">
          <ul class="list-stacked list-stacked--divided">
            <% @tags.each do |tag| %>
              <li>
                <%= link_to tag do %>
                  <span class="badge pull-right"><%= tag.recipe_count %></span>
                  <%= tag.title %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

<header class="page-header row">
  <div class="col-sm-6 hidden-xs">
    <a href="<%= new_recipe_path %>" class="btn btn-primary"><i class="fa fa-plus spaced-right"></i> <%= t('recipes.new') %></a>
  </div>
  <div class="col-xs-12 col-sm-6">
    <% if @recipes.present? %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-search"></i></span>
        <%= search_field_tag :recipes_filter, nil, :placeholder => t('recipes.search'), :class => 'form-control pull-right' %>
      </div>
    <% end %>
  </div>
</header>

<p class="recipes-empty alert alert-info"><%= I18n.t('recipes.empty') %></p>

<% if @recipes.present? %>
  <% @recipes.keys.sort.each do |starting_letter| %>
    <div class="recipes-group">
      <h4 class="text-muted index-letter"><%= starting_letter %></h4>
      <div class="list-group">
        <% @recipes[starting_letter].each do |recipe| %>
          <%= render 'group_item', :recipe => recipe %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="alert alert-info"><%= I18n.t('recipes.empty') %></p>
<% end %>

<% if @tags.present? %>
  <% content_for :aside do %>
    <ul class="nav nav-pills nav-stacked">
      <% @tags.each do |tag| %>
        <li>
          <%= link_to tag, :class => 'tag' do %>
            <span class="badge pull-right"><%= tag.recipe_count %></span>
            <%= tag.title %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>

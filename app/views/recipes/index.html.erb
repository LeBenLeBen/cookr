<header class="page-header">
  <a href="<%= new_recipe_path %>" class="btn btn-default pull-right"><i class="fa fa-plus spaced-right"></i> Nouvelle recette</a>
  <h1>Recettes</h1>
</header>

<% if @recipes.present? %>
  <div class="row">
    <div class="col-sm-8">
      <% @recipes.keys.sort.each do |starting_letter| %>
        <h4 class="text-muted index-letter"><%= starting_letter %></h4>
        <div class="list-group">
          <% @recipes[starting_letter].each do |recipe| %>
            <%= link_to(recipe.title, recipe_path(recipe.id), :class => 'list-group-item') %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-4">
      <div class="list-group">
        <% @tags.each do |tag| %>
          <%= link_to tag, :class => 'list-group-item' do %>
            <span class="badge"><%= tag.recipes.count %></span>
            <%= tag.title %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <p class="alert alert-info"><%= I18n.t('recipes.empty') %></p>
<% end %>
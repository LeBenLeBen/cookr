<h2><%= t('users.sign_in') %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'form-control', :autofocus => true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'form-control' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <p class="help-block"><small><%= link_to t('users.forgot_password'), new_password_path(resource_name) %></small></p>
    <% end -%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> <%= t('activerecord.attributes.user.remember_me') %>
      <% end %>
    </div>
  <% end %>

  <%= f.submit t('users.sign_in'), :class => 'btn btn-primary' %>
<% end %>
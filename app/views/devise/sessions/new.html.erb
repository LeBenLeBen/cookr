<h2 class="mrgt0"><%= t('users.sign_in') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email, autofocus: true %>
  <%= f.input :password, hint: link_to(t('users.forgot_password'), new_password_path(resource_name)) %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, as: :boolean, label: false, inline_label: t('activerecord.attributes.user.remember_me') %>
  <% end %>

  <div class="form-group">
    <%= f.button :submit, t('users.sign_in') %>
  </div>
<% end %>

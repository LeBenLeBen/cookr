<header class="page-header">
  <h1><span class="text-muted">#</span><%= @tag.title %></h1>
</header>

<div class="list-group">
  <% if @recipes.present? %>
    <% @recipes.keys.sort.each do |starting_letter| %>
      <div class="recipes-group">
        <h4 class="text-muted index-letter"><%= starting_letter %></h4>
        <div class="list-group">
          <% @recipes[starting_letter].each do |recipe| %>
            <%= render 'recipes/group_item', :recipe => recipe %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<% if @tags.present? %>
  <% content_for :aside do %>
    <ul class="nav nav-pills nav-stacked">
      <% @tags.each do |tag| %>
        <li<% if tag == @tag %> class="active"<% end %>>
          <%= link_to tag, :class => 'tag' do %>
            <span class="badge pull-right"><%= tag.recipe_count %></span>
            <%= tag.title %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>